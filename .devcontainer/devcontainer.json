{
  "name": "Node.js 22 - Bookworm",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:22-bookworm",
  "features": {
    "ghcr.io/meaningful-ooo/devcontainer-features/fish:2": {},
    "ghcr.io/schlich/devcontainer-features/starship:0": {}
  },
  "runArgs": [
    "--network=host"
  ],
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [8080],
  "updateRemoteUserUID": true, // This is already the default, but just in case.
  // Uninstall global eslint, install dependencies, and configure fish/starship
  "postCreateCommand": "npm uninstall -g eslint && npm install && mkdir -p ~/.config/fish && echo 'fish_add_path $PWD/node_modules/.bin' > ~/.config/fish/config.fish && echo 'starship init fish | source' >> ~/.config/fish/config.fish",

  "remoteUser": "node",
  "containerUser": "node",
  // Configure tool-specific properties.
  "customizations": {
    "jetbrains": {
      "backend": "WebStorm",
      "plugins": [
        "com.jetbrains.plugins.webstorm.eslint"
      ]
    }
  },
}
